<div class="widget-wrap">
  <h3 class="widget-title">Recent Posts</h3>
  <div class="widget">
    <ul>
      <% recentArticles.forEach(function(recentArticle) { %>
      <li>
        <a href="<%- recentArticle.link %>"><%- recentArticle.title %></a>
      </li>
      <% }) %>
    </ul>
  </div>
</div>